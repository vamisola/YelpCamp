<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a New Campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.02" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="images" multiple="multiple">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                <div class="form-group">Tags: <br />
                    <!--<input class="form-control" type="text" name="tags" placeholder="Tags">-->
                    <input class="myCheckbox" name="tags[]" type="checkbox" value="Mountain">
						Mountain
					<input class = myCheckbox name="tags[]" type="checkbox" value="River">
						River
					<input class="myCheckbox" name="tags[]" type="checkbox" value="Lake">
						Lake
					<input class = myCheckbox name="tags[]" type="checkbox" value="Beach">
						Beach
                </div>
                <div class="form-group">New Campground? <br />
                    <!--<input type="checkbox" name="newCamp">-->
                    Yes<input type="radio" name="newCamp" value="true">
                    No<input type="radio" name="newCamp" value="false">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
