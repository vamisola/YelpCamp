<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Editing <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>" min="0.02" step="0.01">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="file" name="images" multiple="multiple">
                </div>
                <% if(!campground.images.includes("/uploads/no-image.png")) { %>
                    <% for(var i = 0; i < campground.images.length; i++ ) { %>
                        <div class="checkbox">
                          <img src="<%= campground.images[i] %>" width="50px">
                          <label>
                            <input type="checkbox" value="<%= campground.images[i] %>" name="removals[]">Remove image?
                          </label>
                        </div>
                    <% } %>
                <% } %>
             
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
                </div>
              
                <div class="form-group">
                    <input name="campground[tags]" type="checkbox" value="Mountain" <%= campground.tags.indexOf("Mountain") !== -1 ? "checked" : "" %> >
                    Mountain
                    <input name="campground[tags]" type="checkbox" value="Beach" <%= campground.tags.indexOf("Beach") !== -1 ? "checked" : "" %> >
                    Beach
                    <input name="campground[tags]" type="checkbox" value="Lake" <%= campground.tags.indexOf("Lake") !== -1 ? "checked" : "" %> >
                    Lake
                    <input name="campground[tags]" type="checkbox" value="River" <%= campground.tags.indexOf("River") !== -1 ? "checked" : "" %> >
                    River
                </div>
               
                <div class="form-group">New Campground ? <br />
                   
                   Yes<input type="radio" name="campground[newCamp]" value = true <%= campground.newCamp === true ? "checked" : "" %>  >
                   No<input type="radio" name="campground[newCamp]" value = false <%= campground.newCamp === false ? "checked" : "" %>  >
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>
